<resources>
    <!-- IDs for each color mode. The values must match the corresponding constants in
         android.view.Display -->
    <integer-array name="color_mode_ids">
        <item>0</item>
        <item>-1</item>
        <item>-1</item>
    </integer-array>

    <!-- Battery health -->
    <string name="config_batCurCap">/sys/class/power_supply/bms/charge_full</string>
    <string name="config_batDesCap">/sys/class/power_supply/bms/charge_full_design</string>
    <string name="config_batChargeCycle">/sys/class/power_supply/bms/cycle_count</string>
    <bool name="config_supportBatteryHealth">true</bool>

    <!-- Default value for battery_light_enabled preference -->
    <bool name="def_battery_light_enabled">true</bool>
    <!-- Default value for battery light pulse -->
    <bool name="def_battery_light_pulse">false</bool>
    <!-- Default value for battery light disabled when fully charged preference -->
    <bool name="def_battery_light_full_charge_disabled">true</bool>
</resources>
